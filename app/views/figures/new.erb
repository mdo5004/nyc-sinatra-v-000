<h1>New Figure</h1>

<form action="/figures" method="post">
    <label for="name"><h3>Name</h3></label>
    
    <input type="text" name="figure[name]" id="figure_name">
    <br>
    <label><h3>Title(s)</h3></label>
    
    <% Title.all.each do |title| %>
    <input type="checkbox" name="figure[title_ids][]" value="<%=title.id%>" id="title_<%=title.id%>"><%=title.name%>
    <br>
    <% end %>
    <input type="text" name="title[name]" placeholder="New Title" id="new_title">
    <br>
    <label><h3>Landmark(s)</h3></label>
    <br>
    <% Landmark.all.each do |landmark| %>
    <input type="checkbox" name="figure[landmark_ids][]" value="<%=landmark.id%>" id="landmark_<%=landmark.id%>"><%=landmark.name%><br>
    <% end %>
    <input type="text" name="landmark[name]" placeholder="New Landmark" id="new_landmark">
    <br>
    <input type="submit" value="Create New Figure">
</form>