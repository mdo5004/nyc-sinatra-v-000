<h1>Edit Landmark</h1>

<form action="/landmarks/<%=@landmark.id %>" method="post">
    <label for="name"><h3>Name</h3></label>
    
    <input type="text" name="landmark[name]" id="name" value="<%=@landmark.name %>">
    <br>
    <label><h3>Associated Figure</h3></label>
    <br>
    <% Figure.all.each do |figure| %>
    <input type="radio" name="figure[][name]" value="<%=figure.name%>" id="checkbox<%=figure.id%>" <%= 'checked' if @landmark.figure == figure%>><%=figure.name%><br>
    <% end %>
    <input type="text" name="landmark[][name]" placeholder="New Figure">
    <br>
    <input type="submit" value="Update">
</form>